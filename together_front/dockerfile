FROM node

WORKDIR /app

COPY package.json /app

RUN npm install

COPY . /app

ARG URL=118.67.143.24  
ARG REACT_APP_REGION=wow
ARG REACT_APP_ACCESS_KEY=wow
ARG REACT_APP_SECRET_ACCESS_KEY=wow
ARG REACT_APP_BUCKET_NAME=wow

ENV API_URL $URL
ENV REACT_APP_REGION $REACT_APP_REGION
ENV REACT_APP_ACCESS_KEY $REACT_APP_ACCESS_KEY
ENV REACT_APP_SECRET_ACCESS_KEY $REACT_APP_SECRET_ACCESS_KEY
ENV REACT_APP_BUCKET_NAME $REACT_APP_BUCKET_NAME

CMD ["npm","run","build"]